<div class="container">
  <div class="col-md pt-4">
    <%if(type == "edit"){%>
    <h2>Edit Article</h2>
    <%}else{%>
    <h2>New Article</h2>
    <%}%>
  </div>
  <form
    action="<%= result._id?`/article/edit/${result._id}`:'/new-article' %>"
    method="POST"
    class="col-md border border-secondary pt-2"
  >
    <div class="form-group">
      <label for="text"><h5>Title:</h5></label>
      <input
        type="text"
        class="form-control"
        placeholder="Enter title"
        id="title"
        name="title"
        autoComplete="off"
        value="<%= result.title?result.title:"" %>"
      />
    </div>
    <div class="form-group">
      <label for="description"><h5>Description:</h5></label>
      <textarea
        class="form-control"
        rows="15"
        id="description"
        name="description"
        placeholder="Enter your content"
      ><%= result.description?result.description:"" %></textarea>
    </div>
    <div class="form-group form-check">
      <button type="submit" class="btn btn-dark">Submit</button>
    </div>
  </form>
</div>
