<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body shadow-sm .form-container">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include ('./partials/messages'); -%>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
          <div id="name-msg" class="m-1" style="color: red;"></div>
        </div>
        <div class="form-group">
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
          <div id="email-msg" class="m-1" style="color: red;"></div>
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
          <div id="password-msg" class="m-1"></div>
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Verify Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
          <div id="password2-msg" class="m-1"></div>
        </div>
        <div class="form-group">
          <input
            type="submit"
            id="submit"
            class="btn btn-outline-dark btn-block"
            value="Register"
            disabled
          />
          <div id="submit-msg" class="m-1" style="color: red;"></div>
        </div>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
